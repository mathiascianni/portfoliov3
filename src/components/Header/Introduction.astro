<script>
    const text = document.getElementById("typewriter");
    const textToWrite =
        "Desarrollador frontend especializado en crear experiencias de usuario interactivas";
    const timeToWrite = 30; //MS

    function writeText() {
        let index = 0;
        const intervalId = setInterval(() => {
            text.innerHTML += textToWrite[index];
            index++;
            if (index >= textToWrite.length) {
                clearInterval(intervalId);
            }
        }, timeToWrite);
    }

    writeText();
</script>

