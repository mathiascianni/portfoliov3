---
const { link, text } = Astro.props;
---

<a class="flex items-center mb-16 lg:mb-desk gap-2 lg:gap-8 group" href={link} target="_blank">
    <img
        src="icons/star.svg"
        alt=""
        class="w-4 h-4 lg:w-8 lg:h-8 fill-primary star transition-all group-hover:sepia-0 group-hover:mr-1"
        loading="lazy"
    />
    <img
        src="icons/star.svg"
        alt=""
        class="w-4 h-4 lg:w-12 lg:h-12 fill-primary star transition-all group-hover:sepia-0 group-hover:mr-1"
        loading="lazy"
    />
    <img
        src="icons/star.svg"
        alt=""
        class="w-4 h-4 lg:w-16 lg:h-16 fill-primary star transition-all group-hover:sepia-0 group-hover:mr-1"
        loading="lazy"
    />
    <div
        class="lg:text-2xl bg-primary group-hover:bg-white group-hover:text-primary rounded-sm py-4 px-8 lg:px-24 transition-all"
    >
        {text}
    </div>
    <img
        src="icons/star.svg"
        alt=""
        class="w-4 h-4 lg:w-16 lg:h-16 fill-primary star transition-all group-hover:sepia-0  group-hover:ml-1"
        loading="lazy"
    />
    <img
        src="icons/star.svg"
        alt=""
        class="w-4 h-4 lg:w-12 lg:h-12 fill-primary star transition-all group-hover:sepia-0  group-hover:ml-1"
        loading="lazy"
    />
    <img
        src="icons/star.svg"
        alt=""
        class="w-4 h-4 lg:w-8 lg:h-8 fill-primary star transition-all group-hover:sepia-0  group-hover:ml-1"
        loading="lazy"
    />
</a>

<style>
    .star {
        filter: invert(0.5) sepia(1) hue-rotate(203deg) saturate(2000%);
    }
</style>
